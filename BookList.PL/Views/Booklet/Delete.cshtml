@model Booklet
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Are You Sure You Want To Delete This Booklet</h1>
<form asp-action="Delete">
<input hidden asp-for="BookletID" />
<div>
   
     <div class="form-group">
        <label class="col-form-label"  asp-for="Activity"></label>
        <input class="form-control"  asp-for="Activity" readonly/>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="Status"></label>
        <input class="form-control"  asp-for="Status" readonly/>
    </div>
    
</div>
<input type="submit" value="Delete" class="btn btn-danger"/> |
<a asp-action="Index" class="btn btn-light">Cancel</a>

</form>



