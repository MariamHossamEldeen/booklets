    <input hidden asp-for="BookletID" />
   
     <div class="form-group">
        <label class="col-form-label"  asp-for="Activity"></label>
        <input class="form-control"  asp-for="Activity"/>
        <span asp-validation-for="Activity"></span>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="Status"></label>
        <input class="form-control"  asp-for="Status"/>
        <span asp-validation-for="Status"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Save"/> |
    <a asp-action="Index" class="btn btn-primary">Back To List</a>
</form>


