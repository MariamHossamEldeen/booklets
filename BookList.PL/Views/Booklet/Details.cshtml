@model Booklet
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Booklet Details</h1>
<div>
    <div class="form-group">
        <label class="col-form-label"  asp-for="Activity"></label>
        <input class="form-control"  asp-for="Activity" readonly/>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="Status"></label>
        <input class="form-control"  asp-for="Status" readonly/>
    </div>
    
    <a asp-action="Edit" asp-route-id="@Model.BookletID" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</div>



