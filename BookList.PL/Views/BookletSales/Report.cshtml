@model List<BookletSales>;
@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Report</h1>

<br />

<br />
@if (Model.Count() > 0)
{
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Booklet ID</th>
                        <th>Customer ID</th>
                        <th>Customer Name</th>
                       

                    </tr>
                </thead>
                <tbody>
            @foreach (var booklet in Model)
            {
                            <tr>
                                <td>@booklet.Date</td>
                                <td>@booklet.BookletID</td>
                                <td>@booklet.CustomerID</td>
                                <td>@booklet.CustomerName</td>
                                

                            </tr>
            }
                </tbody>
            </table>
}
else
{
            <div class="mt-5 alert alert-danger">
                <h3>There Is No Booklet Sales</h3>
            </div>

}


