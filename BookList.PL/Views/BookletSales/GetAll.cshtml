@model List<BookletSales>;
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Booklet Sales</h1>
<br />

<br />
@if (Model.Count() > 0)
{
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Booklet ID</th>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
            @foreach (var booklet in Model)
            {
                    <tr>
                        <td>@booklet.Date</td>
                        <td>@booklet.BookletID</td>
                        <td>@booklet.CustomerID</td>
                        <td>@booklet.CustomerName</td>
                        <td>
                            <a asp-action="Details"  asp-route-id="@booklet.ID" class="btn btn-warning">
                                <i class="fas fa-eye"></i>Details
                            </a>
                        </td>
                        <td>
                                    <a asp-action="Edit" asp-route-id="@booklet.ID" class="btn btn-success">
                                <i class="fas fa-edit"></i>Update
                            </a>
                        </td>

                        <td>
                                    <a asp-action="Delete"  asp-route-id="@booklet.ID" class="btn btn-danger">
                                <i class="fas fa-trash"></i>Delete
                            </a>
        </td>  

                    </tr>
            }
            </tbody>
        </table>
}
else
{
        <div class="mt-5 alert alert-danger">
            <h3>There Is No Booklet Sales</h3>
        </div>

}


