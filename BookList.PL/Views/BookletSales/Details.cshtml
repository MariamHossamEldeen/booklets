@model BookletSales
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Booklet Sales Details</h1>
<div>
    <div class="form-group">
        <label class="col-form-label"  asp-for="Date"></label>
        <input class="form-control"  asp-for="Date" readonly/>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="BookletID"></label>
        <input class="form-control"  asp-for="BookletID" readonly/>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="CustomerID"></label>
        <input class="form-control"  asp-for="CustomerID" readonly/>
    </div>
     <div class="form-group">
        <label class="col-form-label"  asp-for="CustomerName"></label>
        <input class="form-control"  asp-for="CustomerName" readonly/>
    </div>
    
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</div>



